<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/ivEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/img_especialidad">
            </ImageView>

            <TextView
                android:id="@+id/tvNombreEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivEspecialidad"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:text="ESPECIALIDAD"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNombreProcedimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/tvNombreEspecialidad"
                android:text="PROCEDIMIENTO"
                android:fontFamily="@font/roboto_medium"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cl12"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        >
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Editar" />


        <Button
            android:id="@+id/btnEliminars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btnEditar"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:text="Eliminar" />


    </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>