<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DAD4D4"
    tools:context=".CitaAdminActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_degradado"
        android:orientation="vertical">


        <include
            android:id="@+id/customPrinciapl"
            layout="@layout/custom_tolbar_principal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="171dp" />
        <SearchView
            android:id="@+id/SearchCita"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CITAS"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textColor="@color/gsiAzul"
            android:layout_marginBottom="20dp">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</FrameLayout>