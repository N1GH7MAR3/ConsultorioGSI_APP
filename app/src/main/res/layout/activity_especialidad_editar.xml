<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EspecialidadEditarActivity">
    <include
        android:id="@+id/customPrinciapl"
        layout="@layout/custom_tolbar_principal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="171dp" />
    <TextView

        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center|center_horizontal"
        android:text="Especialidad"
        android:textColor="@color/gsiAzul"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="35dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"

        android:padding="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">







        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtLayautId"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="id"
            android:enabled="false"
            app:startIconDrawable="@drawable/ic_account_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtInputId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutNombre"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            app:startIconDrawable="@drawable/ic_account_box">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtInputNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputLayoutImage"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Url"
            app:startIconDrawable="@drawable/ic_image">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtInputImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textEmailAddress"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/imgEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnVisualizar"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"

            android:layout_height="wrap_content"
            android:text="Vista Previa" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <Button
            android:id="@+id/btnLimpiar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limpiar"/>
    </LinearLayout>


</LinearLayout>