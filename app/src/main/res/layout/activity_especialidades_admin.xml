<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAD4D4"
    tools:context=".EspecialidadesAdminActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_degradado"
        android:orientation="vertical">


        <include
            android:id="@+id/customPrinciapl"
            layout="@layout/custom_tolbar_principal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="171dp" />

        <TextView
            android:id="@+id/txtEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESPECIALIDADES"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="25dp"
            android:textColor="@color/gsiAzul"
            android:layout_marginBottom="20dp">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEspecialidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_baseline_add_24"
        />

</FrameLayout>